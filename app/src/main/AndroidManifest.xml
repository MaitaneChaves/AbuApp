<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.tta.abuapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.microphone" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DiaADiaActivity"
            android:label="@string/title_activity_dia_adia"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".JuegosActivity"
            android:label="@string/title_activity_juegos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentador_vista.ParejasActivity"
            android:label="@string/title_activity_parejas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HuecosActivity"
            android:label="@string/title_activity_huecos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HablandoActivity"
            android:label="@string/title_activity_hablando"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PalabrasActivity"
            android:label="@string/title_activity_palabras"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CancionesActivity"
            android:label="@string/title_activity_canciones"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FrasesDiaADiaActivity"
            android:label="@string/title_activity_frases_dia_adia"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FraseSeleccionadaActivity"
            android:label="@string/title_activity_frase_seleccionada"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
